{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "module": "amd",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "moduleResolution": "node", 
        "lib": ["es2017", "dom"]
    },
    "exclude": [
        "node_modules",        
        "!node_modules/@types",
        "!node_modules/@aspnet/signalr/src",
        "aurelia_project",
    ],
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./custom_typings/**/*.d.ts"
    ], 
    "atom": {
        "rewriteTsconfig": false
    }
}